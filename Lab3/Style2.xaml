<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="StackPanel" x:Key="backround">
        <Setter Property="Background" Value="Purple"/>
    </Style>
    <Style TargetType="Button" x:Key="button">
        <Setter Property="MinWidth" Value="75"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Green"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="ContentControl" x:Key="text">
        <!--content control for the list box items and labels-->
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="ListBox" x:Key="listBox">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="StatusBar" x:Key="status">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>